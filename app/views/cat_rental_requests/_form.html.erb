<% action_url = @request.persisted? ? "/cat_rental_requests/:id" : "/cat_rental_requests"  %>
<% form_method = @request.persisted? ? 'PATCH' : 'POST' %>
<% submit_text = @request.persisted? ? "Updated the request" : "Create new Request" %>
<form action="<%= action_url %>", method="post">
  <input type="hidden" name="_method" value="<%= form_method %>">
  <input type="hidden"
         name="authenticity_token"
         value="<%= form_authenticity_token %>">

<select name="cat_rental_request[cat_id]">
  <option>Pick a cat!</option>
  <% @cats.each do |cat| %>
    <option value="<%=cat.id %>" <%="selected" if cat.id == @request.cat_id %>> <%="#{cat.name}, #{cat.id}" %></option>
  <% end %>

</select>

<br><br>
<label for="start_date">Start Date</label>

<input name="cat_rental_request[start_date]" id="start_date" type="date" value="<%= @request.start_date%>"></input>
<br><br>
<label for="end_date">End Date</label>

<input name="cat_rental_request[end_date]" id="end_date" type="date" value="<%= @request.end_date%>"></input>

<input type="submit" value="<%=submit_text %>">

</form>
